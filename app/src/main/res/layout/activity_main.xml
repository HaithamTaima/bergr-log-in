<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CFCCCC"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="50dp"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/porgr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="84dp" />
    
    <EditText
        android:drawablePadding="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="20dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:drawablePadding="10dp"
        android:textColorHint="@color/black"
       android:textColor="@color/black"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_baseline_check_circle_outline_24"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:text="Remembar Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:textSize="15sp"
            android:text="Forget Password"
            android:textColor="#008891"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button

        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:background="@drawable/baton"
        android:text="Log in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Do not Have An Acaont ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:textSize="15sp"
            android:textColor="#008891"
            android:text="SignUp Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>